{
  "name": "electron-app",
  "version": "1.0.0",
  "description": "Aplicaci√≥n Electron conectada a MongoDB y Neo4j",
  "main": "main.js",
  "author": {
    "name": "Michael Guerrero",
    "email": "mguerreros1@ucentral.edu.co"
  },
  "homepage": "",
  "license": "",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --mac --linux"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "mongodb": "^5.6.0",
    "neo4j-driver": "^5.7.0",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "com.electron.providencias",
    "productName": "Buscador de Providencias",
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist",
      "!*.md"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns",
      "artifactName": "${productName}-mac-${version}.${ext}"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-win-${version}.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Buscador de Providencias"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "maintainer": "Michael Guerrero <tuemail@example.com>",
      "artifactName": "${productName}-linux-${version}.${ext}"
    },
    "extraResources": [
      {
        "from": "./.env",
        "to": ".env"
      }
    ]
  }
}
